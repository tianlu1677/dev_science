.row
  .col-md-12
    = render "breadcrumb"

.row
  .col-md-12
    %table.table.table-bordered.table-striped
      %tbody
        - attributes.each do |attr|
          %tr
            %td{:style=>"width:20%;font-weight: bold;"}=resource_class.human_attribute_name(attr) + ":"
            - if respond_to?("#{attr}_text".to_sym)
              %td= self.send("#{attr}_text".to_sym)
            - elsif resource.respond_to?("#{attr}_text".to_sym)
              %td= resource.send("#{attr}_text".to_sym)
            - elsif resource.respond_to?("#{attr}_title".to_sym)
              %td= resource.send("#{attr}_title".to_sym)
            - elsif resource.respond_to?("#{attr}_name".to_sym)
              %td= resource.send("#{attr}_name".to_sym)
            - elsif resource.send(attr).is_a?(Time)
              %td= resource.send(attr).try(:strftime, '%Y年%m月%d %H时%M分%S秒')
            - else
              %td= resource.send(attr).to_s
.table-toolbar
  .btn-group
    = link_to new_resource_path, class: 'btn green' do
      = t("#{resource_class.name.underscore}.new")
      %i.fa.fa-plus
  .btn-group
    = link_to edit_resource_path(resource), class: 'btn yellow' do
      = t("#{resource_class.name.underscore}.edit")
      %i.fa.fa-edit

  .btn-group
    = link_to resource_path(resource), :method => :delete, data: {confirm: t("#{resource_class.name.underscore}.are_you_sure")}, class: 'btn red' do
      = t("#{resource_class.name.underscore}.destroy")
      %i.fa.fa-times

  .btn-group
    = link_to collection_path, class: 'btn blue' do
      = t("#{resource_class.name.underscore}.back_list")
      %i.fa.fa-backward
