= javascript_include_tag "kindeditor/kindeditor.js"
= simple_form_for [:admin, resource], validate: true, class: "form-horizontal" do |f|
  .form-body
    = f.association :user, collection: User.all
    = f.association :forum
    = f.association :category
    = f.input :author_name
    = f.input :title
    = f.input :content, as: :kindeditor, :simple_mode => true
    -#= f.input :published_at, as: :date
    = f.input :status

  .form-actions
    .row
      .col-md-offset-3.col-md-9
        = f.button :submit, class: "btn green", data: { disabled_with: "提交中"}
        = link_to t("#{resource_class.name.underscore}.back_list") , collection_path, class: 'btn default'

