.row
  .col-md-12
    / BEGIN SAMPLE TABLE PORTLET
    .portlet.light
      .portlet-title
        .caption
          %i.fa.fa-cogs.font-green-sharp
          %span.caption-subject.font-green-sharp.bold.uppercase
            全局配置
        .tools
          %a.collapse{"data-original-title" => "", :href => "javascript:;", :title => ""}
          %a.config{"data-original-title" => "", "data-toggle" => "modal", :href => "#portlet-config", :title => ""}
          %a.reload{"data-original-title" => "", :href => "javascript:;", :title => ""}
          %a.remove{"data-original-title" => "", :href => "javascript:;", :title => ""}
      .portlet-body.flip-scroll
        .row
          .col-md-12
            .portlet.box.green
              .portlet-title
                .caption
                  %i.fa.fa-cogs
                    ="当前环境#{Rails.env}"
              .portlet-body
                .table-scrollable
                  %table.table.table-hover
                    %thead
                      %tr
                    %tbody
                      - Settings.each do |setting|
                        - setting_key = setting[0]
                        - setting_value = setting[1]
                        %tr
                          %td{:style=>"width:20%;font-weight: bold;"}=t("settings.#{setting_key}")
                          %td= "#{setting_key} : #{setting_value}"
                          %td= "#{setting.class}"
