<div id="comment_<%= comment.id %>">
  <div class="portlet light">
    <div class="portlet-title">
      <div class="caption">
        <i class="icon-speech"></i>
        <span class="caption-subject bold"><%= comment.user_username %></span>
        <span class="caption-helper">回复 <%= comment.parent.try(:user_username) %></span>
      </div>
      <div class="actions">
        <div class="btn-group">
          <a class="btn btn-circle btn-default " href="javascript:;" data-toggle="dropdown" aria-expanded="false">
            <i class="fa fa-user"></i> User <i class="fa fa-angle-down"></i>
          </a>
          <ul class="dropdown-menu pull-right">
            <li>

              <%= link_to edit_comment_path(comment), class: 'button btn-xs edit-comment', remote: true do %>
                <i class="fa fa-pencil"></i> 编辑
              <% end %>
            </li>
            <li>
              <%= link_to comment_path(comment), class: 'button btn-xs edit-comment', method: :delete, data: {confirm: "delete?"}, remote: true do %>
                <i class="fa fa-pencil"></i> 删除
              <% end %>

            </li>
          </ul>
        </div>
        <%= link_to comment_reply_path(comment), class: "btn btn-circle btn-default comment-reply", remote: true do %>
          <i class="fa fa-plus"></i> 回复
        <% end %>

      </div>
    </div>
    <div class="portlet-body">
      <div class="slimScrollDiv">
        <%= comment.content %>
      </div>
      <div class="reply-comment">

      </div>
    </div>
  </div>
</div>
