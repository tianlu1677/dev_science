var reply = $("#comment_<%= @parent_comment.id %> .comment-reply")
if(reply.hasClass('replying')){
  reply.removeClass('replying');
  $("#comment_<%= @parent_comment.id %> .reply-comment").html('')
}else{
  $("#comment_<%= @parent_comment.id %> .reply-comment").append(<%= raw render('comments/form',
    comment: @comment, parent_comment: @parent_comment, commentable: @parent_comment.commentable).inspect %> );
  reply.addClass('replying')
}


