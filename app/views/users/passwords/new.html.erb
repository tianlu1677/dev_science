<h3>忘记密码？</h3>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'forget-form', style: 'display: block;', method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :email, required: true, label: false, placeholder: '邮箱', autofocus: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, '提交', class: "btn btn-success uppercase pull-right" %>
  </div>
<% end %>
