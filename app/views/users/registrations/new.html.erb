<h3>注册</h3>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), style: 'display: block;') do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
    <%= f.input :username, required: true, label: false, placeholder: '用户名' %>
    <%= f.input :email, required: true, label: false, placeholder: '邮箱', autofocus: true %>
    <%= f.input :password, required: true, label: false, placeholder: '密码', hint: ("最少#{@minimum_password_length}字符" if @minimum_password_length) %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: '再输一次密码' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, '提交', class: 'btn btn-success uppercase pull-right' %>
    <%= link_to '登录', new_user_session_path %>
  </div>
<% end %>
