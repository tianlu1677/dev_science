<h3 class="form-title">登录</h3>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: 'login-form') do |f| %>
  <% if flash[:notice] || flash[:alert]%>
    <div class="alert alert-danger">
      <button class="close" data-close="alert"></button>
			<span>
			  <%= flash[:notice] || flash[:alert] %>
      </span>
    </div>
  <% end %>

    <%=
      f.input :email, required: false, autofocus: true,
      label: false,
      placeholder: '邮箱',
      input_html: {
        class: 'form-control form-control-solid placeholder-no-fix'
      }
    %>
    <%=
      f.input :password, required: false,
      label: false,
      placeholder: '密码',
      input_html: {
        class: 'form-control form-control-solid placeholder-no-fix'
      }
    %>
  <div class="form-actions">
    <div class="pull-left">
      <%= f.input :remember_me, label: '记住我', as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="pull-right forget-password-block">
      <%= link_to new_user_password_path do %>
        <h4>忘记密码？</h4>
      <% end %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, '登陆', class: 'btn btn-success btn-block',  data: { disable_with: '验证中...'} %>
  </div>
  <div class="login-options">
    <!--<h4>Or login with</h4>-->
    没有收到注册邮件？点击
      <%= link_to new_confirmation_path(resource_name) do %>
      <strong>重新发送</strong>
      <% end %>
  </div>

  <div class="create-account">
    <p>没有账户？
      <%= link_to new_user_registration_path, class: "uppercase" do %>
      创建新账户
      <% end %>
    </p>


  </div>
<% end %>
