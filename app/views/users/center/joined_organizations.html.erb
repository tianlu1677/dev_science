            <div class="tab-content no-space">
              <div class="tab-content">

                <div class="tab-pane active " id="organization_online_tab">

                  <% @memberships.online.each do |membership| %>
                    <%= render 'organizations/organization', organization: membership.manageable %>
                  <% end %>
                  <%= show_nothing(@memberships.online) %>

                </div>

                <div class="tab-pane" id="organization_admin_tab">
                  <% @memberships.admin.each do |membership| %>
                    <%= render 'organizations/organization', organization: membership.manageable %>
                  <% end %>
                  <%= show_nothing(@memberships.admin) %>

                </div>

                <div class="tab-pane" id="organization_check_tab">
                  <!-- 审核中的机构-->
                  <div class="row">
                    <% @memberships.check.each do |membership| %>
                      <div class="col-sm-12 col-md-4">
                        <%= render 'organizations/organization', organization: membership.manageable %>
                      </div>
                    <% end %>
                  </div>
                  <%= show_nothing(@memberships.check) %>

                </div>
                <div class="tab-pane" id="organization_offline_tab">
                  <% @memberships.offline.each do |membership| %>
                    <%= render 'organizations/organization', organization: membership.manageable %>
                  <% end %>
                  <%= show_nothing(@memberships.offline) %>
                </div>

              </div>

            </div>
