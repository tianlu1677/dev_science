<%= simple_form_for [@organization, @organizations_user], wrapper: :vertical_form, validate: true,
                    html: { role: 'form', id: "organizations_user_form" }  do |f| %>

  <div class="form-body">
    <%= f.input :desc, placeholder: '请表明你的身份' %>
    <%= f.input :apply_at, as: :hidden, input_html: {value: DateTime.now} %>
    <%= f.input :organization_id, as: :hidden, input_html: {value: @organization.id} %>
    <div class="form-actions noborder">
      <%= f.submit '提交', class: 'btn green', data: { disable_with: '提交中...' }  %>
      <button type="button" class="btn default" data-dismiss="modal">取消</button>
      <%#= link_to '取消',  request.referer.present? ? request.referer : organizations_path, class: 'btn default' %>
    </div>

  </div>
<% end %>
