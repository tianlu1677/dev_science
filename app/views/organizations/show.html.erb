<div class="row">
  <div class="col-md-9">
    <div class="portlet light">
      <div class="portlet-title">
        <div class="caption">
          <i class="icon-paper-plane font-yellow-casablanca"></i>
								<span class="caption-subject bold font-yellow-casablanca uppercase">
								  <%= @organization.name  %>
                </span>
          <span class="caption-helper">more samples...</span>
        </div>
      </div>
      <div class="portlet-body">
        <div class="col-md-12">
          <!-- BEGIN Portlet PORTLET-->
          <div class="portlet light">
            <div class="portlet-title">
              <div class="caption">
                <i class="fa fa-gift"></i><%= @organization.name %> | <%= @organization.short_name %> | <%= @organization.city %> | <%= @organization.website %>
              </div>
              <div class="actions">
                <a href="javascript:;" class="btn blue btn-sm">
                  <i class="fa fa-share"></i> Share </a>
                <div class="btn-group">
                  <a class="btn btn-sm purple" href="javascript:;" data-toggle="dropdown">
                    <i class="fa fa-user"></i> User <i class="fa fa-angle-down "></i>
                  </a>
                </div>
              </div>
            </div>
            <div class="portlet-body">
              <p>
                组织的简介<%= @organization.intro  %>
              </p>
              <p>
                组织的介绍<%= @organization.desc  %>
              </p>
            </div>
          </div>
          <!-- END Portlet PORTLET-->
        </div>


        <div class="row">
          <div class="col-md-8">
            <div class="note note-info note-shadow">
              <p>
                该机构下的群组
              </p>
            </div>
          </div>

          <% @groups.each do |group| %>
            <div class="col-md-6">
              <%= render 'groups/group', group: group %>
            </div>
          <% end %>

          <!--原始页面-->
          <div class="col-sm-12 col-md-3">
            <div class="thumbnail">
              <img src="data:image/svg+xml;base64," alt="100%x200" style="width: 100%; height: 200px; display: block;" data-src="holder.js/100%x200">
              <div class="caption">
                <h3>Thumbnail label</h3>
                <p>
                  Cras justo odio, dapibus ac facilisis in, egestas eget quam.
                </p>
                <p>
                  <a href="javascript:;" class="btn red">
                    Button </a>
                  <a href="javascript:;" class="btn default">
                    Button </a>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
