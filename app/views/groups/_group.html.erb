<div class="portlet light">
  <div class="portlet-title">
    <div class="caption">
      <i class="icon-speech"></i>
      <span class="caption-subject bold uppercase"><%= group.name %></span>
      <span class="caption-helper">weekly stats...</span>
    </div>
    <div class="actions">
      <%= link_to new_group_groups_user_path(group), class: 'btn btn-circle btn-default' do %>
        <i class="fa fa-plus"></i> 加入
      <% end %>
    </div>
  </div>
  <div class="portlet-body">
    <div class="thumbnail">
      <img src="data:image/svg+xml;base64," alt="100%x200" style="width: 100%; height: 200px; display: block;" data-src="holder.js/100%x200">
      <div class="caption">
        <h3>Thumbnail label</h3>
        <p>
          Cras justo odio, dapibus ac facilisis in, egestas eget quam.
        </p>
        <p>
          <%= link_to '查看', group_path(group), class: 'btn blue' %>
        </p>
      </div>
    </div>

  </div>
</div>