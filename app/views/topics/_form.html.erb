<%= simple_form_for [@group, @topic], wrapper: :vertical_form, validate: true,  html: { role: 'form', id: 'topic_form' }  do |f| %>
  <div class="form-body">
    <%= f.input :title, as: :string %>
    <%= f.input :body  %>
    <%= f.input :tag_list  %>
    <%= f.input :status %>
    <div class="form-actions noborder">
      <%= f.submit class: 'btn green', data: { disable_with: t('action_labels.submitting') }  %>
      <%= link_to '取消',  request.referer.present? ? request.referer : organizations_path, class: 'btn default' %>
    </div>

  </div>
<% end %>

<%= render "resources/form", resourceable: @topic  %>


